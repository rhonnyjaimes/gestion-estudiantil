<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>GESTIÓN ESTUDIANTIL</title>
    <style>
        /* Estilos proporcionados por el usuario */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #007bff;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .btn-edit {
            background-color: #28a745;
        }
        .btn-edit:hover {
            background-color: #218838;
        }
        .btn-add {
            margin-bottom: 20px;
            display: block;
            text-align: center;
        }
        .btn-group {
            text-align: center;
            margin-top: 20px;
        }
        .user-info {
            text-align: right;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>GESTIÓN ESTUDIANTIL</h1>
        
        <!-- Información del usuario -->
        <div class="user-info">
            <p>Usuario: <%= usuario.username %></p>
            <p>Rol: <%= usuario.rol %></p>
            <a href="/usuarios/logout" class="btn btn-danger">Cerrar Sesión</a>
        </div>

        <a href="/estudiantes/agregar" class="btn btn-add">Agregar Estudiante</a>
        
        <!-- Formulario para buscar por carrera -->
        <form id="buscarCarreraForm">
            <label for="carrera">Buscar por Carrera:</label>
            <select name="carrera" id="carrera">
                <option value="Ingeniería en Computación">Ingeniería en Computación</option>
                <option value="Derecho">Derecho</option>
                <option value="Medicina">Medicina</option>
                <option value="Administración">Administración</option>
                <option value="Contaduría">Contaduría</option>
                <option value="Ingeniería Industrial">Ingeniería Industrial</option>
            </select>
            <button type="submit" class="btn">Buscar</button>
        </form>

        <script>
            document.getElementById('buscarCarreraForm').addEventListener('submit', function(event) {
                event.preventDefault();
                const carrera = document.getElementById('carrera').value;
                const url = `/estudiantes/carrera/${encodeURIComponent(carrera)}`;
                window.location.href = url;
            });
        </script>

        <div class="btn-group">
            <a href="estudiantes/inscritos" class="btn">Estudiantes Inscritos</a>
            <a href="estudiantes/deudas" class="btn">Estudiantes con Deudas</a>
            <a href="usuarios" class="btn">Ver Todos los Usuarios</a> <!-- Nuevo botón agregado -->
        </div>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% estudiantes.forEach(est => { %>
                    <tr>
                        <td><%= est.id %></td>
                        <td><%= est.nombre %></td>
                        <td>
                            <a href="/estudiantes/<%= est.id %>" class="btn">Detalles</a>
                            <a href="/estudiantes/editar/<%= est.id %>" class="btn btn-edit">Editar</a>
                            <form action="/estudiantes/<%= est.id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
