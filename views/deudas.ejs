<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Estudiantes con Deudas</title>
    <style>
        /* Estilos basados en el CSS proporcionado */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #007bff;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        .deuda {
            font-weight: bold;
            color: #dc3545; /* Color rojo para resaltar la deuda */
        }
        .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .btn-back {
            background-color: #6c757d;
        }
        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Estudiantes con Deudas</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Carrera</th>
                    <th>Monto Deuda</th>
                    <th>Acción</th>
                </tr>
            </thead>
            
        </td>
        <script>
            function marcarSolvente(id) {
                if (confirm('¿Estás seguro de que deseas marcar al estudiante como solvente?')) {
                    console.log(`Intentando marcar al estudiante ${id} como solvente.`);
                    fetch(`/estudiantes/${id}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ inscrito: 0 }) // Aquí enviamos el campo a actualizar
                    })
                    .then(response => {
                        console.log(`Respuesta recibida: ${response.status}`);
                        if (response.ok) {
                            alert('Estudiante marcado como solvente.');
                            location.reload(); // Recargar la página para mostrar el cambio
                        } else {
                            alert('Error al procesar el pago.');
                        }
                    })
                    .catch(err => {
                        console.error('Error al enviar la solicitud:', err);
                        alert('Error al procesar la solicitud.');
                    });
                }
            }
        </script>
        
            <tbody>
                <% estudiantesConDeuda.forEach(est => { %>
                    <tr id="estudiante-<%= est.id %>">
                        <td><%= est.id %></td>
                        <td><%= est.nombre %></td>
                        <td><%= est.correo %></td>
                        <td><%= est.carrera %></td>
                        <td class="deuda"><%= est.deuda %> BS</td>
                        <td>
                            <button class="btn" onclick="marcarSolvente(<%= est.id %>)">Marcar como Solvente</button>
                        </td>
                                                                                
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <!-- Botón para volver a la página principal -->
        <a href="/estudiantes" class="btn btn-back">Volver a la Página Principal</a>
    </div>

    
</body>
</html>
